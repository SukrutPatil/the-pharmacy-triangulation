<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+Tamma+2:wght@500&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+Tammudu+2:wght@800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/css/NewProduct.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
    />
    <title>Document</title>
  </head>

  <body>
    <div class="nav-container">
      <nav>
        <div class="logo"></div>
        <div class="nav-links">
          <ul>
            <div class="dropdown">
              <button class="dropbtn">Articles</button>
              <div class="dropdown-content">
                <a href="/admin/articles">My Articles</a>
                <a href="/admin/createNewArticle">Write New Article</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">Modules</button>
              <div class="dropdown-content">
                <a href="/admin/modules">All Modules</a>
                <a href="/admin/createNewModule">New Module</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">Products</button>
              <div class="dropdown-content">
                <a href="/admin/products">All Products</a>
                <a href="/admin/createNewProduct">New Products</a>
              </div>
            </div>
            <div class="dropdown">
              <button class="dropbtn">Sessions</button>
              <div class="dropdown-content">
                <a href="/admin/sessions">All Sessions</a>
              </div>
            </div>
            <div class="logoutBtn">
              <a href="">
                <img
                  src="../public/assets/logOut.png"
                  alt=""
                  style="height: 30px; margin: 5px;"
                />
              </a>
            </div>
          </ul>
        </div>
      </nav>
    </div>
    <section>
      <h1>Add New Product</h1>
      <div class="main">
        <form
          action="admin/newProduct"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="column1">
            <div class="field">
              <p>Name</p>
              <input type="text" name="product_name" />
            </div>
            <div class="field">
              <p>Price</p>
              <input type="text" name="product_price" />
            </div>
            <div class="field">
              <p>Discounted Amount</p>
              <input type="text" name="product_discounted_amount" />
            </div>
            <div class="field-th">
              <p>Upload Thumbnail</p>
              <div id="drop-area">
                <input
                  type="file"
                  id="fileElem"
                  max-size="2000"
                  multiple
                  accept="image/*"
                  onchange="handleFiles(this.files)"
                  name="product_thumbnail"
                />
                <div id="gallery"></div>
                <div class="pbb">
                  <progress id="progress-bar" max="100" value="0"></progress>
                  <label class="button" for="fileElem">Select some files</label>
                </div>
              </div>
            </div>
            <button class="save" type="submit">Save</button>
          </div>
          <div class="column2">
            <div class="field">
              <p>Manufactured By</p>
              <input type="text" name="product_manufactured_by" />
            </div>
            <div class="field">
              <p>Batch Number.</p>
              <input type="text" name="product_batch_number" />
            </div>
            <div class="field">
              <p>HSN Code</p>
              <input type="text" name="product_hsn_code" />
            </div>
            <div class="field">
              <p>Expiry Date</p>
              <input type="text" name="product_expiry_date" />
            </div>
            <div class="field">
              <p>Total In Stock</p>
              <input type="text" name="product_total_in_stock" />
            </div>
          </div>
        </form>
      </div>
    </section>
    <script src="../public/js/dropbox.js"></script>
  </body>
</html>
