    <section>
        <h1>Add New Article</h1>
        <div class="main">
            <form action="">
                <div class="column1">
                    <div class="field">
                        <p>Name</p>
                        <input type="text">
                    </div>
                    <div class="field">
                        <p>Publisher's Name</p>
                        <input type="text">
                    </div>
                    <div class="field-th">
                        <p>Upload Thumbnail</p>
                        <div id="drop-area">                      
                            <input type="file" max-size="2000" id="fileElem" multiple accept="image/*" onchange="handleFiles(this.files)">
                            <div id="gallery"></div>
                            <div class="pbb">
                                <progress id="progress-bar" max=100 value=0></progress>
                                <label class="button" for="fileElem">Select some files</label>
                            </div>
                        </div>
                    </div>
                    <button class="save" type="submit">Save</button>
                    <button class="delete" type="submit">Delete</button>
                </div>
                <div class="column2">
                    <div class="field">
                        <p>Article</p>
                        <textarea rows="70" cols="50" name="comment" form="usrform"></textarea>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <script src="../public/js/dropbox.js"></script>
